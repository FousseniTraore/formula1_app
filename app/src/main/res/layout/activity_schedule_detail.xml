<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleDetailActivity">

    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/red"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/returnArrow"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="15sp"
            />

        <TextView
            android:id="@+id/raceNameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_marginVertical="10sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_title"
        android:layout_marginHorizontal="20sp"
        android:layout_marginVertical="30sp"
        android:layout_marginTop="66dp"
        android:padding="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginVertical="30dp"
                android:src="@drawable/circuit" />

            <TextView
                android:id="@+id/circuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Circuit"
                android:textColor="@color/red"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/circuitDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Circuit"
                android:textSize="20sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="300dp"
                android:layout_height="1dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Round"
                android:textColor="@color/red"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/roundDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Round"
                android:textSize="20sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="300dp"
                android:layout_height="1dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Time"
                android:textColor="@color/red"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dateTimeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Time"
                android:textSize="20sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="300dp"
                android:layout_height="1dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/locality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locality"
                android:textColor="@color/red"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/localityDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locality"
                android:textSize="20sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="300dp"
                android:layout_height="1dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="Country"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/countryDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textSize="20sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="300dp"
                android:layout_height="1dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/firstPracticeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Practice"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/secondPracticeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second Practice"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/thirdPracticeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Third Practice"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/qualifyingDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualifying"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>